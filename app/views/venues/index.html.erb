<div class="row" style="text-align:right;">
  <%= link_to 'Nuevo lugar', new_venue_path %>
</div>

</br>
<div class="row">
  <% @venues.each_with_index do |venue, index| %>
    <div class="col-md-4 portfolio-item" style="background-color:white; ">
      <div class="counter-number" style="font-size: 50px; text-align:center;"><%= venue.counter.to_s %></div>
      <h3><%= venue.name.to_s %></h3>
        <%#= venue.devices.size %>
        <small>
        <%= link_to 'Editar', edit_venue_path(venue) %> | 
        <%= link_to 'Borrar', venue, method: :delete, data: { confirm: 'Are you sure?' } %>
        </small>
      <p>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Acceso</th>
            <th>Ent</th>
            <th>Sal</th>
            <th style="text-align:center; width: 55px;"><%= link_to '<i class="fa fa-plus-circle"></i>'.html_safe, new_venue_device_path(venue) %></th>

          </tr>
        </thead>
        <tbody>
          <% venue.devices.each do |device| %>
            <tr>
              <td><%= link_to "#{device.name}", venue_device_path(device.venue, device) %></td>
              <td><%= device.enter %></td>
              <td><%= device.leave %></td>
              <td><%= link_to "<i class='fa fa-pencil fa-fw'></i>".html_safe , edit_venue_device_path(device.venue, device) %>
              <%= link_to "<i class='fa fa-trash-o fa-fw'></i>".html_safe, venue_device_path(venue, device), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </p>
    </div>

    <% if (index+1)%3 == 0 %>
</div></br></br>
<div class="row">
    <% end %>

  <% end %>
</div>

<br>

